<div class="sec3">
  <div class="login_wrapper">
    <p class="page_title">LOGIN</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<ul>
  <li>
    <span><%= f.label :"EMAIL/NAME" %></span>
    <%= f.text_field :login, :class => 'form' %>
  </li>

  <li>
    <span><%= f.label :password %></span>
    <%= f.password_field :password, autocomplete: "off", :class => 'form' %>
  </li>

  <% if devise_mapping.rememberable? -%>
    <p class="auto_login"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <div class="button"><%= f.submit "Log in", :class => 'button button_login'  %></div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
  </div>
