<h1>Theme#show</h1>
<p>Find me in app/views/theme/show.html.erb</p>

  <h3><%= @themes.posted_at %></h3>
  <h2><%= @themes.name %></h2>

  <h2>Add a comment:</h2>
<%= render partial: 'layouts/form' %>

<% @themes.posts.each do |post| %>
  <p><%= post.content %></p>
  <p>username : <%= link_to post.user.username, user_path(post.user) %></p>
  <p>fav : <%= post.stars.count %></p>

  <%= form_for @star, :remote => true do |f| %>
    <%= f.hidden_field :post_id, value: post.id %>
    <%= f.hidden_field :user_id, value: post.user.id %>
    <% if current_user.present? %>
      <%= f.hidden_field :current_user_id, value: current_user.id %>
    <% end %>
    <%= f.submit %>
  <% end %>

<% end %>
